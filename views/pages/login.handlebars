<head>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styleLogin.css">
    <title>Login</title>
</head>

<body>
    <div class="wrapper">
        <div class="form">
            <h2>Login</h2>
            <form action="/ad/login" method="post">
                <input type="text" class="w100" placeholder="Email" name="email">
                <input type="password" class="w100" id="senha" placeholder="Senha" name="password">
                <span class="span" onclick="mostrarSenha()"><svg width="1em" height="1em" viewBox="0 0 16 16"
                        class="bi bi-lock-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2.5 9a2 2 0 0 1 2-2h7a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-7a2 2 0 0 1-2-2V9z" />
                        <path fill-rule="evenodd" d="M4.5 4a3.5 3.5 0 1 1 7 0v3h-1V4a2.5 2.5 0 0 0-5 0v3h-1V4z" />
                    </svg></span>
                <a href="#">Esqueceu a Senha?</a>
                <a href="/user/novo">Cadastrar novo usu√°rio\\</a>
                <div class="clear"></div>
                <input type="submit" class="btn" value="Acessar">
            </form>
        </div>
    </div>
    <script>
        function mostrarSenha() {
            var senha = document.getElementById('senha');
            if (senha.type == "password") {
                senha.type = "text";
            }
            else {
                senha.type = "password";
            }
        }
    </script>
</body>